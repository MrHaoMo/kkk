#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../../../._mocha-nightwatch@3.2.1@mocha-nightwatch/bin/mocha" "$@"
  ret=$?
else 
  node  "$basedir/../../../._mocha-nightwatch@3.2.1@mocha-nightwatch/bin/mocha" "$@"
  ret=$?
fi
exit $ret
